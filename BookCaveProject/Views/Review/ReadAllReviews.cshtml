@using Entity.Concrete
@model IEnumerable<Entity.Concrete.Review>
@{
	ViewData["Title"] = "ReadAllReviews";
	Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section class="section single-wrapper">
	<div class="container">
		<div class="row">
			<div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
				@foreach (var item in Model)
				{
					<div class="page-wrapper">
						<div class="blog-title-area text-center">
							<span class="color-orange"><a href="tech-category-01.html" title="">KATEGORİ ADI?</a></span>

							<h3>@item.ReviewTitle</h3>

							<div class="blog-meta big-meta">
								<small><a href="#" title="">@item.ReviewCreatedDate.ToShortDateString()</a></small>
								<small><a href="#" title="">YAZAR?</a></small>
								<small><a href="#" title=""><i class="fa fa-eye"></i> 0</a></small>
							</div><!-- end meta -->
						</div><!-- end title -->

						<hr class="invis1">

						<div class="single-post-media">
							<img src="@item.ReviewImage" alt="" class="img-fluid">
						</div><!-- end media -->

						<hr class="invis1">


						<div class="blog-content">
							<div class="pp">
								<p>@item.ReviewContent</p>
							</div>
						</div>

						<hr class="invis1">

						<div class="custombox authorbox clearfix">
							<h4 class="small-title">Yazar Hakkında</h4>
							<div class="row">
								<div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
									<img src="upload/author.jpg" alt="" class="img-fluid rounded-circle">
								</div><!-- end col -->

								<div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
									<h4><a href="#">YAZAR İSMİ</a></h4>
									<p>YAZAR HAKKINDA BİLGİLER</p>
								</div><!-- end col -->
							</div><!-- end row -->
						</div><!-- end author-box -->

						<hr class="invis1">

						<div class="custombox clearfix">
							<h4 class="small-title">YORUM SAYISI?</h4>
						@await Component.InvokeAsync("CommentListByBlog",new {id = ViewBag.i})	
						</div><!-- end custom-box -->

						<hr class="invis1">

						<div class="custombox clearfix">
							<h4 class="small-title">Leave a Reply</h4>
							<div class="row">
								<div class="col-lg-12">
									<form class="form-wrapper">
										<input type="text" class="form-control" placeholder="Your name">
										<input type="text" class="form-control" placeholder="Email address">
										<input type="text" class="form-control" placeholder="Website">
										<textarea class="form-control" placeholder="Your comment"></textarea>
										<button type="submit" class="btn btn-primary">Submit Comment</button>
									</form>
								</div>
							</div>
						</div>


					</div>
				}
			</div>
			<div class="col-lg-3 col-md-12 col-sm-12 col-xs-12">
				<div class="sidebar">
					@await Html.PartialAsync("_Partial1")
					@await Html.PartialAsync("_Partial2")
				</div>
			</div>
		</div>
	</div>
</section>

