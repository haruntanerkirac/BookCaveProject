@model IEnumerable<Entity.Concrete.Comment>

<div class="row">
	<div class="col-lg-12">
		@if (Model.Count() == 0)
		{
			<h5>Daha önce hiç yorum yapılmamış.</h5>
		}
		else
		{
			@foreach (var item in Model)
			{
				<div class="comments-list">
					<div class="media">
						<a class="media-left" href="#">
							<img src="upload/author.jpg" alt="" class="rounded-circle">
						</a>
						<div class="media-body">
							<h4 class="media-heading user_name">@item.CommentUserName <small>5 days ago</small></h4>
							<p>@item.CommentContent</p>
						</div>
					</div>
					<div class="media">
						<a class="media-left" href="#">
							<img src="upload/author_01.jpg" alt="" class="rounded-circle">
						</a>
					</div>
				</div>
			}
		}
	</div><!-- end col -->
</div><!-- end row -->
