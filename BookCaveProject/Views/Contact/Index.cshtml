@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<div id="wrapper">

	<div class="page-title lb single-wrapper">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
					<h2><i class="fa fa-envelope-open-o bg-orange"></i> Bizimle İletişime Geçin <small class="hidden-xs-down hidden-sm-down">Farklı fikirlere ihtiyacımız var.</small></h2>
				</div><!-- end col -->
			</div><!-- end row -->
		</div><!-- end container -->
	</div><!-- end page-title -->

	<section class="section wb">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="page-wrapper">
						<div class="row">
							<div class="col-lg-7">
								<form method="post" class="form-wrapper">
									<input type="text" class="form-control" placeholder="Adınız Soyadınız" name="ContactUserName">
									<input type="email" class="form-control" placeholder="Mail Adresi" name="ContactMail">
									<input type="text" class="form-control" placeholder="Konu" name="ContactSubject">
									<textarea class="form-control" placeholder="Mesajınız" name="ContactMessage"></textarea>
									<button type="submit" class="btn btn-primary">Gönder<i class="fa fa-envelope-open-o"></i></button>
								</form>
							</div>
						</div>
					</div><!-- end page-wrapper -->
				</div><!-- end col -->
			</div><!-- end row -->
		</div><!-- end container -->
	</section>

</div><!-- end wrapper -->
