@using Entity.Concrete
@model List<About>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<style>
	h1 {
		color: black
	}

	p {
		line-height: 1.6;
		margin-bottom: 15px;
	}
</style>

<section class="main-content-w3layouts-agileits">
	<div class="page-title lb single-wrapper">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
					<h2>Hakkımızda </h2>
				</div><!-- end col -->
			</div><!-- end row -->
		</div><!-- end container -->
	</div><!-- end page-title -->
	<br />
	<div class="container">
		@foreach (var item in Model)
		{
			<p>@item.AboutDetails1</p>
			<p>@item.AboutDetails2</p>
			<a href="/Review/Index" class="btn">Kitap İncelemeleri</a>
		}
	</div>
	<br />
</section>